# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PATTERN=^sensor-data-quad.*
KAFKA_CONSUMER_GROUP=sensor-storage-service
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_MAX_POLL_INTERVAL_MS=300000
KAFKA_MAX_POLL_RECORDS=500

# Azure Blob Storage Configuration
AZURE_STORAGE_ACCOUNT=your_storage_account_name
AZURE_STORAGE_KEY=your_storage_account_key
AZURE_CONTAINER_NAME=sensor-data-cold-storage
AZURE_MAX_RETRIES=3
AZURE_RETRY_DELAY=1
AZURE_MAX_WORKERS=4
AZURE_CHUNK_SIZE=1048576

# Local Storage Configuration
LOCAL_STORAGE_PATH=/data/raw
PARQUET_COMPRESSION=lz4
PARQUET_PARTITION_COLS=
MAX_ROWS_PER_FILE=100000

# File Cleanup Configuration
CLEANUP_ENABLED=true
CLEANUP_AGE_DAYS=7
CLEANUP_INTERVAL_HOURS=6
CLEANUP_DRY_RUN=false

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8080
SERVICE_DEBUG=false
SERVICE_WORKERS=1
LOG_LEVEL=INFO

# Docker-specific
COMPOSE_PROJECT_NAME=sensor-storage